
@{
    ViewBag.Title = "Funcionarios";
    Layout = "~/Views/Shared/_LayoutV5.cshtml";
}
<script>
    var canInsert = false;
    var canRead = false;
    var canEdit = false;
    var canDelete = false;
    @{
         if (Model.CanRead){<text>canRead = true;</text>}
         if (Model.CanInsert){<text>canInsert = true;</text>}
         if (Model.CanUpdate){<text>canEdit = true;</text>}
         if (Model.CanDelete){<text>canDelete = true;</text>}
    }

</script>

<script type="text/javascript" src="@Url.Content("~/Areas/Seguridad/Scripts/Funcionarios.js?V=" + DateTime.Now.ToString("yyyyddMMHHmmss"))"></script>
<style>
    #BotonUsr {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    #chkVerPss .dx-checkbox-icon {
        width: 35px;
        height: 35px;
    }
</style>
<div data-url="@Url.Content("~")" ID="SIM" resizable>
    <div class="panelSIM panelSIM-default">
        <div class="panelSIM-heading">
            <h3 class="panelSIM-title">
                <label class="header">Administrar Funcionarios del SIM</label>
            </h3>
        </div>
        <div id="grdListaFuncionarios"></div>
        <br />
        <div id="BotonUsr">
            <div id="btnNuevoFunc"></div>
        </div>
        <br />
        <div id="PopupNuevoFunc">
            <div class="form-horizontal" style="width: 95%;">
                <div class="form-group">
                    <div class="control-label col-sm-3">Grupo :</div>
                    <div class="col-sm-9" id="cboGrupo"></div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3">Funcionario entidad :</div>
                    <div class="col-md-9" id="cboFuncionario"></div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3">Nombres :</div>
                    <div class="col-md-9" id="txtNombres"></div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-3">Apellidos :</div>
                    <div class="col-sm-9" id="txtApellidos"></div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-3">Correo electrónico :</div>
                    <div class="col-sm-9" id="txtMail"></div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3">Usuario/Login :</div>
                    <div class="col-md-4" id="txtLogin"></div>
                    <div id="lblLogin"></div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-3">Contraseña :</div>
                    <div class="col-sm-3" id="txtPassword"></div>
                    <div class="col-sm-1" id="chkVerPss"></div>
                    <div class="control-label col-sm-2" id="lblVerPss" hidden>Verifica contraseña :</div>
                    <div class="col-sm-3" id="txtPasswordVer"></div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-3">Fecha Registro (d/m/y) :</div>
                    <div class="col-sm-3" id="txtRegistro"></div>
                    <div class="control-label col-sm-3">Fecha Vence (d/m/y) :</div>
                    <div class="col-sm-3" id="fecVence"></div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-3">Tipo Usuario :</div>
                    <div class="col-sm-9" id="chkTipoUsr"></div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3">Estado :</div>
                    <div class="col-md-9" id="chkEstado"></div>
                </div>
                <br />
                <div id="BotonUsr">
                    <div id="btnGuardaUsr"></div>
                </div>
            </div>
        </div>
        <div id="PopupDetalleFunc"></div>
        <div id="popupSubirFirma">
            <div class="widget-container flex-box">
                <span>Profile Picture</span>
                <div id="dropzone-external" class="flex-box">
                    <img id="dropzone-image" src="#" hidden alt="" />
                    <div id="dropzone-text" class="flex-box">
                        <span>Drag & Drop the desired file</span>
                        <span>…or click to browse for a file instead.</span>
                    </div>
                    <div id="upload-progress"></div>
                </div>
                <div id="firmaFuncionario"></div>
            </div>
            <div class="row">
                <div class="col-md-12" id="BotonUsr">
                    <div id="btnSubeFirma"></div>
                </div>
            </div>
        </div>
        <div id="LoadingPanel"></div>
    </div>
</div>

