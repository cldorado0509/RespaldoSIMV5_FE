    <script src=@Url.Content("~/Scripts/jquery-1.10.2.js")></script>
    <script src=@Url.Content("~/Scripts/jquery_form.js")></script>

    <script src=@Url.Content("~/Scripts/jquery.uploadfile.js")></script>
