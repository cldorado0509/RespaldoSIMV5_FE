@using SIM.Properties
@{
    Layout = "~/Views/Shared/_LayoutV5.cshtml";
}
<style>
    html, body {
        height: 100%;
    }

    .dx-datagrid-rowsview .dx-datagrid-table .dx-row > td {
        vertical-align: middle;
        /*padding: 7px;*/
    }

    .dx-popup-content {
        padding: 20px;
    }
</style>

<script>
    $(document).ready(function () {
        AjustarTamano();
    });

    $(window).resize(function () {
        AjustarTamano();
    });

    function AjustarTamano() {
        $("#pnlContenedor").height((window.innerHeight || document.body.clientHeight) - 140);
        $("#pnlPendientes").height($("#pnlContenedor").outerHeight() - $("#tabOpciones").outerHeight() - 4);
        $("#pnlHistorico").height($("#pnlContenedor").outerHeight() - $("#tabOpciones").outerHeight() - 4);
    }
</script>

<script type="text/javascript" src="@Url.Content("~/Areas/ControlVigilancia/Scripts/facturacion.js?v=1.00")"></script>

<div id="popRegistrarFactura">
    <div id="registrarFacturaContainer" style="width:100%; height:100%">
        <div>
            <div class="dx-field">
                <div class="dx-field-label labelfullrow">Factura:</div>
                <div class="dx-field-value valuefullrow">
                    <div id="factura" class="col-md-6"></div>
                </div>
            </div>
        </div>
        <br />
        <div style="height: 10%; width:100%" class="row">
            <div class="col-md-9"></div>
            <div class="col-md-3">
                <div id="aceptarRegistrarFactura"></div>
            </div>
        </div>
    </div>
</div>


<div style="padding: 0px;">
    <div data-url="@Url.Content("~")" id="app" resizable>
        <div class="panelSIM-default">
            <div id="loadPanel"></div>
            <div class="panelSIM panelSIM-default" id="pnlContenedor">
                <div id="tabOpciones" class="panelSIM-heading" style="padding-bottom: 0px"></div>
                <div id="tab01" style="display: block">
                    <div id="pnlPendientes">
                        <div style="height: 100%">
                            <div id="grdPendientesFacturacion"></div>
                        </div>
                    </div>
                </div>
                <div id="tab02" style="display: none">
                    <div id="pnlHistorico">
                        <div style="height: 100%">
                            <div id="grHistoricoFacturacion"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>