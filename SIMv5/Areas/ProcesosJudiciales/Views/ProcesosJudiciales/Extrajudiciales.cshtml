                {
                    <div class="col-md-5"><div id="agregarProcesoJudicial"></div></div>
                }
            </div>
            <div style="height: 95%">
                <div id="grdProcesosJudiciales"></div>
            </div>
        </div>
    </div>
    <div class="panelSIM-heading" style="padding: 10px; display: none" id="detalleProcesos">
        <div id="regresar"></div>
        <div id="tabOpciones" class="panelSIM-heading" style="padding-bottom: 0px"></div>
        <div id="tab01" style="display: block; margin:10px">
            <div id="container">
                <div id="asistente">
                    <h3>Información básica</h3>
