                            <div class="col-md-3">
                                <div id="fechaRadicado"></div>
                            </div>
                            <div class="col-md-1">
                                <div id="verSolicitud"></div>
                            </div>
                            <div class="col-md-8">
                                <div id="fileUploaderSolicitud"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3" style="font-size:9pt">
                                <p><b>Fecha Notificación</b></p>
                            </div>
                            <div class="col-md-1"></div>
                            <div class="col-md-8" style="font-size:9pt">
                                <p style="color:brown"><b>Subir la Citación de la Audiencia</b></p>
