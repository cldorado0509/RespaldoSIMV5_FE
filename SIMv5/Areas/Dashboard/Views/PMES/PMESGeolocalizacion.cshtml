@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        var height = document.getElementById('pnlDashboard').offsetHeight;
        $("#frmDashboard").height(height);
    });

    $(window).resize(function () {
        var height = document.getElementById('pnlDashboard').offsetHeight;
        $("#frmDashboard").height(height);
    });
</script>

<script type="text/javascript" src="@Url.Content("~/Areas/Dashboard/Scripts/pmes.js")"></script>
<div ng-app="SIM" data-url="@Url.Content("~")" id="app" class="my-cloak" resizable>
    <div class="panelSIM panelSIM-default">
        <div ng-controller="PMESDashboardController" class="panelSIM panelSIM-default">
            <div dx-load-panel="{message: 'Cargando...', showIndicator: true, shading: true, bindingOptions: { visible: 'cargandoVisible' } }"></div>
            <div dx-tabs="dxTabsOptions" id="tabOpciones" class="panelSIM-heading" style="padding-bottom: 0px"></div>
            <div ng-show="isActive(0)" class="panelSIM-heading" style="min-height: 600px; padding: 0px;">
                <div style="width: 100%; height: 0; padding-bottom: 250%;" id="pnlDashboard">
                    <iframe src="/SIM" style="position: relative; width: 100%; height: 100%; border: none" id="frmDashboard" scrolling="no" />
                </div>
            </div>
            <div ng-show="isActive(1)" class="panelSIM-heading" style="min-height: 600px">
                
            </div>
        </div>
    </div>
</div>