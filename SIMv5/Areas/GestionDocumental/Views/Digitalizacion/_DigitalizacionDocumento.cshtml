@using SIM.Properties

<script type="text/javascript" src="@Url.Content("~/Resources/dynamsoft.webtwain.initiate.js")"> </script>
<script type="text/javascript" src="@Url.Content("~/Resources/dynamsoft.webtwain.config.js")"> </script>
<script type="text/javascript" src="@Url.Content("~/Areas/GestionDocumental/Scripts/scanner_operation.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Areas/GestionDocumental/Scripts/scanner_initpage.js")"></script>

<div style="padding-left: 15px;">
    <label for="source">Seleccionar Esc&aacute;ner:</label>
    <select size="1" id="source" style="position:relative;width: 220px;" onchange="source_onchange()">
        <option value=""></option>
    </select>
    <label for='ADF'><input type='checkbox' id='ADF' checked />AutoFeeder&nbsp;</label>
    <label for='Duplex'><input type='checkbox' id='Duplex' />Duplex</label>
</div>
<div style="display:none;" id="pNoScanner">
    <a href="javascript: void(0)" class="ShowtblLoadImage" style="font-size: 11px; background-color:#f0f0f0; position:relative" id="aNoScanner">
        <b>What if I don't have a scanner/webcam connected?</b>
    </a>
</div>
<div id="container" class="body_Broad_width" style="margin:0 auto;width:1000px">
    <div id="DWTcontainer" class="body_Broad_width" style="background-color:#ffffff; height:510px; border:0;">
        <div id="dwtcontrolContainer"> </div>
        <br />
        <div id="DWTNonInstallContainerID" style="width:580px"></div>
        <div id="DWTemessageContainer" style="width:100%">
            <div class="row">
                <div class="col-md-2">
                    <input id='DW_btnLastImage' onclick='btnLastImage_onclick()' type='button' value=' &gt;| ' />
                    <input id='DW_btnNextImage' onclick='btnNextImage_onclick()' type='button' value=' &gt; ' />
                    <input id='DW_btnPreImage' onclick='btnPreImage_onclick()' type='button' value=' &lt; ' />
                    <input id='DW_btnFirstImage' onclick='btnFirstImage_onclick()' type='button' value=' |&lt; ' />
                </div>
                <div class="col-md-2">
                    <input type='text' size='2' id='DW_CurrentImage' readonly='readonly' />/
                    <input type='text' size='2' id='DW_TotalImage' readonly='readonly' />
                </div>
                <div class="col-md-2">
                    <input id='DW_btnRemoveCurrentImage' onclick='btnRemoveCurrentImage_onclick()' type='button' value='Eliminar Imagen' />
                </div>
                <div class="col-md-3">
                    <input id='DW_btnRemoveAllImages' onclick='btnRemoveAllImages_onclick()' type='button' value='Eliminar Todas las Im&aacute;ges' />
                </div>
            </div>
            <div style='text-align:center; width:580px; background-color:#FFFFFF;display:block'>
                <div style='position:relative; background:white; float:left; width:430px; height:35px; display:none'>
                    
                </div>
                <div style='position:relative; background:white; float:left; width:150px; height:35px; display:none'>
                    Preview Mode
                    <select size='1' id='DW_PreviewMode' onchange='setlPreviewMode();'>
                        <option value='0'>1X1</option>
                    </select>
                    <br />
                </div>
            </div>
        </div>
        <div id="ScanWrapper">
            <div id="divScanner" class="divinput" style="display:none">
                <ul class="PCollapse">
                    <li>
                        <div class="divType"><div class="mark_arrow expanded"></div>Custom Scan</div>
                        <div id="div_ScanImage" class="divTableStyle">
                            <ul id="ulScaneImageHIDE">
                                <li id="divProductDetail"></li>
                                <li style="text-align:center;">
                                    <input class="bigbutton" style="color:#C0C0C0;" disabled="disabled" type="button" value="Scan" onclick="acquireImage();" />
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="dx-field">
                <div dx-file-uploader="{ buttonText: 'Seleccionar Documento', labelText: 'Arrastrar Documento Aquí', multiple: false, accept: '*/*', onValueChanged: subirArchivo }" id="documentoDigitalizado"></div>
            </div>
        </div>
    </div>
    <div class="row" style="margin-bottom: 10px">
        <div class="col-md-3 col-sm-3 col-xs-3">
            <div dx-button="btnScanSettings" id="btnScan"></div>
        </div>
        <div class="col-md-3 col-sm-3 col-xs-3">
            <div dx-button="btnAlmacenarDocumentoSettings" id="btnAlmacenarDocumento"></div>
        </div>
    </div>
</div>