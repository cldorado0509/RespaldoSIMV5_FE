<script type="text/javascript">
    var tiposIdentificacionDataSource = @Html.Raw(ViewBag.tiposIdentificacion);
    var TipoPersonalDataSource = @Html.Raw(ViewBag.tiposPersonal);
</script>
<style>
    body > div.dx-overlay-wrapper.dx-popup-wrapper.dx-overlay-modal.dx-overlay-shader > div > div.dx-popup-content {
        padding: 0px !important;
    }
</style>
<div ng-controller="PersonalDGAController" class="panel panel-default">
    <div dx-load-panel="{message: 'Cargando...', showIndicator: true, shading: true, bindingOptions: { visible: 'cargandoPersonalVisible' } }" id="popLoadingPersonal"></div>
    <div dx-popup="popPersonalDGASettings" id="popPersonalDGA">
        <div dx-scroll-view="{ direction: 'both' }">
            <div class="dx-fieldset" style="padding: 20px !important;" dx-validation-group="{}" id="personalGroupValidator">
                <div class="row">
                    <div class="col-md-6">
                        <div class="dx-field">
                            <div class="dx-field-label">Identificación</div>
                            <div class="dx-field-value" style="padding:0px">
                                <div class="row" style="margin:0px">
                                    <div class="col-md-3 col-sm-3 col-xs-3" style="padding:0px">
                                        <div dx-select-box="TipoDocumentoSettings" dx-validator="{ validationRules: [{ type: 'required', message: 'Tipo de Documento Requerido' }] }"></div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-6" style="padding:0px">
                                        <div dx-number-box="IdentificacionSettings" dx-validator="{ validationRules: [{ type: 'required', message: 'Identificación Requerida' }] }"></div>
                                    </div>
                                    <div class="col-md-1 col-sm-1 col-xs-1" style="padding:0px">
                                        <span style="display: inline-block; vertical-align: middle; line-height: normal; width: 100%; text-align: center; ">-</span>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-xs-2" style="padding:0px">
                                        <div dx-number-box="{@(ViewBag.ReadOnly ? "readOnly: true, " : "") bindingOptions: { value: 'datosTerceroDGA.TERCERO.N_DIGITOVER', readOnly: 'datosTerceroDGA.ID_PERSONALDGA != 0' }}" dx-validator="{ validationRules: [{ type: 'required', message: 'Dígito de Verficación Requerido' }] }"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="dx-field">
                            <div class="dx-field-label">Género</div>
                            <div class="dx-field-value">
                                <div dx-select-box="GeneroSettings" dx-validator="{ validationRules: [{ type: 'required', message: 'Género Requerido' }] }"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="dx-field">
                            <div class="dx-field-label">Nombres</div>
                            <div class="dx-field-value">
                                <div dx-text-box="{@(ViewBag.ReadOnly ? "readOnly: true, " : "") bindingOptions: { value: 'nombres.NOMBRES' }}" dx-validator="{ validationRules: [{ type: 'required', message: 'Nombres Requerido' }] }"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="dx-field">
                            <div class="dx-field-label">Apellidos</div>
                            <div class="dx-field-value">
                                <div dx-text-box="{@(ViewBag.ReadOnly ? "readOnly: true, " : "") bindingOptions: { value: 'nombres.APELLIDOS' }}" dx-validator="{ validationRules: [{ type: 'required', message: 'Apellidos Requerido' }] }"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="dx-field">
                            <div class="dx-field-label">Fecha de Nacimiento</div>
                            <div class="dx-field-value">
                                <div dx-date-box="{@(ViewBag.ReadOnly ? "readOnly: true, " : "") formatstring:'yyyy/MM/dd', acceptCustomValue: false, format: 'date', useCalendar: true, bindingOptions: { value: 'datosTerceroDGA.TERCERO.D_NACIMIENTO' }}" style="width:100%"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="dx-field">
                            <div class="dx-field-label labelfullrow">Actividad Económica</div>
                            <div class="dx-field-value valuefullrow">
                                <div dx-lookup="ActividadEconomicaSettings" dx-validator="{ validationRules: [{ type: 'required', message: 'Actividad Económica Requerida' }] }"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="dx-field">
                            <div class="dx-field-label labelfullrow">Profesión</div>
                            <div class="dx-field-value valuefullrow">
                                <div dx-lookup="ProfesionSettings" dx-validator="{ validationRules: [{ type: 'required', message: 'Profesión Requerida' }] }"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="dx-field">
                            <div class="dx-field-label">Es Responsable</div>
                            <div class="dx-field-value">
                                <div dx-select-box="EsResponsableSettings" dx-validator="{ validationRules: [{ type: 'required', message: 'Es Responsable Requerido' }] }"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="dx-field">
                            <div class="dx-field-label">% Dedicación</div>
                            <div class="dx-field-value">
                                <div dx-number-box="{@(ViewBag.ReadOnly ? "readOnly: true, " : "") bindingOptions: { value: 'datosTerceroDGA.N_DEDICACION' }}" dx-validator="{ validationRules: [{ type: 'required', message: '% Dedicación Requerido' }] }"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="dx-field">
                            <div class="dx-field-label">Tipo Vinculación</div>
                            <div class="dx-field-value">
                                <div dx-select-box="TipoVinculacionSettings" dx-validator="{ validationRules: [{ type: 'required', message: 'Tipo Vinculación Requerido' }] }"></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="dx-field">
                            <div class="dx-field-label">Tipo de Personal</div>
                            <div class="dx-field-value">
                                <div dx-select-box="TipoPersonalSettings" dx-validator="{ validationRules: [{ type: 'required', message: 'Tipo Vinculación Requerido' }] }"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="dx-field">
                            <div class="dx-field-label">Exp. Ambiental (Meses)</div>
                            <div class="dx-field-value">
                                <div dx-number-box="{@(ViewBag.ReadOnly ? "readOnly: true, " : "") bindingOptions: { value: 'datosTerceroDGA.N_EXPERIENCIA' }}" dx-validator="{ validationRules: [{ type: 'required', message: 'Experiencia Requerida' }] }"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
                <hr style="border-color: gainsboro;">
                <div class="row">
                    <div class="col-md-6">
                        <div class="dx-field">
                            <div class="dx-field-label">Teléfono</div>
                            <div class="dx-field-value">
                                <div dx-number-box="{@(ViewBag.ReadOnly ? "readOnly: true, " : "") bindingOptions: { value: 'datosTerceroDGA.TERCERO.N_TELEFONO' }}" dx-validator="{ validationRules: [{ type: 'required', message: 'Teléfono Requerido' }] }"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="dx-field">
                            <div class="dx-field-label">Correo Electrónico</div>
                            <div class="dx-field-value">
                                <div dx-text-box="{@(ViewBag.ReadOnly ? "readOnly: true, " : "") bindingOptions: { value: 'datosTerceroDGA.TERCERO.S_CORREO' }}" dx-validator="{ validationRules: [{ type: 'email', message: 'Correo Electrónico Inválido' }, { type: 'required', message: 'Correo Electrónico Requerido' }] }"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="dx-field">
                            <div class="dx-field-label labelfullrow">Observaciones</div>
                            <div class="dx-field-value valuefullrow">
                                <div dx-text-box="{@(ViewBag.ReadOnly ? "readOnly: true, " : "") bindingOptions: { value: 'datosTerceroDGA.S_OBSERVACION' }}"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-heading">
        <img src="../../Content/Images/Ayuda.png" id="btnAyudasPersonal" style="float:right" onclick="MostrarAyuda(92, 'DGA-Personal');" />
        <br />
        <br />
        <div dx-data-grid="grdTercerosDGASettings" id="grdTercerosDGA"></div>
    </div>
</div>