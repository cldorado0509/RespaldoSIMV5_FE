
@{
    Layout = "~/Views/Shared/_LayoutV5.cshtml";
}

<style>
    #MisTarGrid .dx-datagrid-header-panel .dx-toolbar-before .dx-radiogroup-horizontal {
        padding-right: 30px;
        border-right: solid 1px black;
    }

    #BotonesTareas {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }
 </style>
<script type="text/javascript" src="@Url.Content("~/Areas/Tramites/Scripts/TareasFuncionario.js?v=0.1")"></script>
<div data-url="@Url.Content("~")" ID="SIM" resizable>
    <div class="panelSIM panelSIM-default">
        <div class="panelSIM-heading">
            <h3 class="panelSIM-title">
                <label class="header">Tareas por Funcionario</label>
            </h3>
        </div>
        <br />
        <div id="ldPanel"></div>
        <div class="row col-md-12">
            <label class="col-md-2">Funcionario : </label>
            <div class="col-md-6" id="sbFuncionario"></div>
        </div>
        <br />
        <div class="row col-md-12" id="MisTareas">
            <div id="MisTarGrid"></div>
            <br />
        </div>
        <div class="row col-md-12" id="PanelTareas" style="visibility:hidden;">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <table cellpadding=0 cellspacing=0 border=1 width="100%">
                    <tr>
                        <td align="center" bgcolor="gainsboro" colspan="3" width="50%" style="border-style: solid; border-width: 1px; border-color: #000000;">
                            <Label Font-Bold="True" Font-Names="Arial" Font-Size="8pt" Width="100%">De mi responsabilidad</Label>
                        </td>
                        <td align="center" bgcolor="gainsboro" width="50%" colspan="3" style="border-style: solid; border-width: 1px; border-color: #000000;">
                            <Label Font-Bold="True" Font-Names="Arial" Font-Size="8pt" Width="100%">De mi conocimiento</Label>
                        </td>
                    </tr>
                    <tr>
                        <td align="center" bgcolor="whitesmoke"><Label Font-Names="Arial" Font-Size="8pt" Width="100%" id="NroTareasPendientes">Pendientes: </Label></td>
                        <td align="center" bgcolor="whitesmoke"><Label Font-Names="Arial" Font-Size="8pt" Width="100%" id="NroTareasTerminadas">Terminadas: </Label></td>
                        <td align="center" bgcolor="whitesmoke"><Label Font-Names="Arial" Font-Size="8pt" Width="100%" id="NroTareasNoAbiertas">No abiertas: </Label></td>
                        <td align="center" bgcolor="whitesmoke"><Label Font-Names="Arial" Font-Size="8pt" Width="100%" id="NroTareasCopiaPendientes">Pendientes: </Label></td>
                        <td align="center" bgcolor="whitesmoke"><Label Font-Names="Arial" Font-Size="8pt" Width="100%" id="NroTareasCopiaTerminadas">Terminadas: </Label></td>
                        <td align="center" bgcolor="whitesmoke"><Label Font-Names="Arial" Font-Size="8pt" Width="100%" id="NroTareasCopiaNoAbiertas">No abiertas: </Label></td>
                    </tr>
                </table>
            </div>
            <div class="panelSIM-footer" style="width: 100%;">
                <h2 class="panelSIM-title"><label class="header" style="width: 100%; text-align: center">Convenciones</label></h2>
                <div class="col-md-12" style="text-align: center;"><img src="~/Content/Images/convenciones.png" /></div>
            </div>
        </div>
        <div id="popDetalleTramite"></div>
        <div id="popAvanzaTareaTramite" style="padding: 0px">
            <iframe src="" id="frmAvanzaTareaTramite" style="width:100%; height:100%" frameborder="0" scrolling="no"></iframe>
        </div>
    </div>
</div>

