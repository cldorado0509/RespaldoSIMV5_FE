@using SIM.Properties
@{
    Layout = "~/Views/Shared/_LayoutV5.cshtml";
}
<style>
    html, body {
        height: 100%;
    }

    .dx-datagrid-rowsview .dx-datagrid-table .dx-row > td {
        vertical-align: middle;
        /*padding: 7px;*/
    }

    .dx-popup-content {
        padding: 0px;
    }
</style>

<script>
    $(document).ready(function () {
        AjustarTamano();
    });

    $(window).resize(function () {
        AjustarTamano();
    });

    function AjustarTamano() {
        $("#pnlContenedor").height((window.innerHeight || document.body.clientHeight) - 160);
        $("#pnlBusquedaDocumento").height($("#pnlContenedor").outerHeight() - $("#tabOpciones").outerHeight() - 4);
        $("#pnlSolicitud").height($("#pnlContenedor").outerHeight() - $("#tabOpciones").outerHeight() - 4);
        $("#pnlJustificacion").height($("#pnlContenedor").outerHeight() - $("#tabOpciones").outerHeight() - 4);
        $("#pnlAutorizacion").height($("#pnlContenedor").outerHeight() - $("#tabOpciones").outerHeight() - 4);
        $("#pnlAprobacionATU").height($("#pnlContenedor").outerHeight() - $("#tabOpciones").outerHeight() - 4);
    }
</script>

<script type="text/javascript" src="@Url.Content("~/Areas/Tramites/Scripts/anulaciondocumento.js?v=1.03")"></script>

<div id="pantallaDetalleTramites" title="Detalle Tramite" style="display: none; overflow: hidden;">
    <iframe src="" id="DetalleTramites" style="width:100%; height:100%" frameborder="0" scrolling="no"></iframe>
</div>

<div id="popAvanzaTareaTramite" style="padding: 0px">
    <iframe src="" id="frmAvanzaTareaTramite" style="width:100%; height:100%" frameborder="0" scrolling="no"></iframe>
</div>

<div id="popDetalleTramite" style="padding: 0px !important">
    <iframe src="" id="frmDetalleTramite" style="width:100%; height:100%" frameborder="0" scrolling="yes"></iframe>
</div>

<div id="popDocumento" style="padding: 0px">
    <iframe src="" id="frmDocumento" style="width:100%; height:100%" frameborder="0" scrolling="no"></iframe>
</div>

<div id="popDocumentoPreview" style="padding: 0px">
    <iframe src="" id="frmDocumentoPreview" style="width:100%; height:100%" frameborder="0" scrolling="no"></iframe>
</div>

<div id="popComentario" style="padding: 0px">
    <div id="comentarioContainer" style="width:100%; height:100%">
        <div id="comentario"></div>
        <div style="height: 10%; width:100%" class="row">
            <div class="col-md-9"></div>
            <div class="col-md-3">
                <div id="aceptarComentario" class="col-md-3"></div>
            </div>
        </div>
    </div>
</div>

<div style="padding: 0px;">
    <div data-url="@Url.Content("~")" id="app" data-codigo="@ViewBag.Codigo" data-ua="@(ViewBag.UsuarioAutoriza?"1":"0")" data-uatu="@(ViewBag.UsuarioApruebaATU?"1":"0")" resizable>
        <div class="panelSIM-default">
            <div id="loadPanel"></div>
            <div class="panelSIM panelSIM-default" id="pnlContenedor">
                <div id="tabOpciones" class="panelSIM-heading" style="padding-bottom: 0px"></div>
                <div id="tab00" style="display: block">
                    <div id="pnlBusquedaDocumento">
                        <div style="height: 100%">
                            <div id="grdDocumentos"></div>
                        </div>
                        <!--div style="height: 20px; margin-top: 10px">
                            <div class="col-md-6"></div>
                            <div class="col-md-1" style="height:30px; background: Yellow; padding-left:10px; padding-right:10px"></div>
                            <div class="col-md-2" style="height:100%">En Proceso de Anulación</div>
                            <div class="col-md-1" style="height:30px; background: LightPink; padding-left:10px; padding-right:10px"></div>
                            <div class="col-md-2" style="height:100%">Documento Anulado</div>
                        </div-->
                    </div>
                </div>
                <div id="tab01" style="display: none">
                    <div id="pnlSolicitud">
                        <div style="height: 100%">
                            <div id="grdSolicitud"></div>
                        </div>
                    </div>
                </div>
                <div id="tab02" style="display: none">
                    <div id="pnlJustificacion">
                        <div style="height: 100%">
                            <div id="grdJustificacion"></div>
                        </div>
                    </div>
                </div>
                <div id="tab03" style="display: none">
                    <div id="pnlAutorizacion">
                        <div style="height: 100%">
                            <div id="grdAutorizacion"></div>
                        </div>
                    </div>
                </div>
                <div id="tab04" style="display: none">
                    <div id="pnlAprobacionATU">
                        <div style="height: 100%">
                            <div id="grdAprobacionATU"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>