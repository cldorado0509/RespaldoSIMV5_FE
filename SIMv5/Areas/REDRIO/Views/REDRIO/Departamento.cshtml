   <div id="vistaPrincipal">
    <div class="title-container">
        <h2 >Departamentos</h2>
        
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalNuevoDato">
            Nuevo Departamento
        </button>
    </div>
    <div class="panelSIM">
        <div id="gridContainer"></div>
    </div>
</div>

<div class="modal fade" id="modalNuevoDato" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Agregar Nuevo Departamento</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="formNuevoDato">
            <div class="form-group">
            <label for="cm">CM</label>
            <input type="number" class="form-control" id="cm" placeholder="Ingrese el CM">
          </div>
          <div class="form-group">
            <label for="nombre">Nombre del Departamento</label>
            <input type="text" class="form-control" id="nombre" placeholder="Ingrese el nombre">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary" id="btnGuardarDato">Guardar</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modalEditarDato" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Editar Departamento</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="formEditarDato">
          <input type="hidden" id="editIndex" />
          <div class="form-group">
           
          <div class="form-group">
            <label for="editNombre">Nombre del Departamento</label>
            <input type="text" class="form-control" id="editNombre" placeholder="Ingrese el nombre">
          </div>
          
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary" id="btnActualizarDato">Actualizar</button>
      </div>
    </div>
  </div>
</div>
