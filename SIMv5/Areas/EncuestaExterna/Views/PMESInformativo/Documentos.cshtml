@using SIM.Properties
@{
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
}

<style>
    .container {
        padding: 0px !important;
    }

    .dx-accordion-item-title {
        background-color: #94C840;
        color: white;
    }

    .dx-accordion-item-opened > .dx-accordion-item-title {
        background-color: #94C840;
        color: white;
    }

    .dx-accordion-item.dx-state-hover > .dx-accordion-item-title {
        background-color: #76B705;
        color: white;
    }

    .dx-accordion-item-opened.dx-state-hover > .dx-accordion-item-title {
        background-color: #76B705;
        color: white;
    }

    .ui-accordion .ui-accordion-content {
        overflow: hidden;
    }

    #txtFuncionario .dx-texteditor-container .dx-texteditor-input {
        float: left;
        width: 100%;
    }

    .dx-fileuploader-input-wrapper {
        padding: 0px;
        border: 3px dashed transparent;
    }

    .dx-fileuploader-input-wrapper {
        padding: 0px;
        border: 0px;
    }

    .dx-fileuploader-wrapper {
        padding: 0px;
    }

    .dx-datagrid-content .dx-datagrid-table .dx-row > td, .dx-datagrid-content .dx-datagrid-table .dx-row > tr > td {
        vertical-align: middle;
    }
</style>

<script type="text/javascript" src="@Url.Content("~/Areas/EncuestaExterna/Scripts/PMESInformativo/documentos.js?v=1.20")"></script>

<div style="padding: 0px;">
    <div data-url="@Url.Content("~")" id="app" data-id="@ViewBag.id" data-time="@ViewBag.time" data-type="@(ViewBag.Popup??false ? "p" : "f")" data-ro="@ViewBag.SoloLectura" data-tercero="@ViewBag.idTercero" data-nombretercero="@ViewBag.NombreTercero" resizable>
        <iframe name="_ArchivoDescarga" style="display:none"></iframe>
        <div id="loadPanel"></div>
        <div id="popTercero">
            <div id="grdTercero"></div>
        </div>
        <div id="grid-container"></div>
        <div class="panelSIM-default">
            <div class="panelSIM panelSIM-default" id="pnlContenedor" style="display:@(ViewBag.Popup??false ? "none" : "block")">
                <div class="row" style="text-align: center; margin: 10px; display: none">
                    <h3 style="color: #94C840; font-weight:bold">
                        Publicaci&oacute;n Documentos
                    </h3>
                </div>
            </div>
            <div id="asistente" class="ui-accordion ui-widget ui-helper-reset">
                <h3 class="ui-accordion-header ui-state-default ui-accordion-icons ui-accordion-header-active ui-state-active" style="padding: 5px; font-size: 18px;">Datos Publicaci&oacute;n</h3>
                <div style="padding: 15px">
                    <div class="row" id="pnlOrganizacion" style="height: 50px;">
                        <div class="col-md-12">
                            <div class="dx-field">
                                <div class="dx-field-label labelfullrow" style="padding-left: 10px; font-weight: bold">Organizaci&oacute;n</div>
                                <div class="dx-field-value valuefullrow">
                                    <div id="organizacion"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="height: 50px;">
                        <div class="col-md-12">
                            <div class="dx-field">
                                <div class="dx-field-label labelfullrow" style="padding-left: 10px; font-weight: bold">Tipo de Comunicaci&oacute;n</div>
                                <div class="dx-field-value valuefullrow">
                                    <div id="idTipoComunicacion"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="pnlTipoComunicacion" style="height: 50px; display: none">
                        <div class="col-md-12">
                            <div class="dx-field">
                                <div class="dx-field-label labelfullrow" style="padding-left: 10px; font-weight: bold">&nbsp;</div>
                                <div class="dx-field-value valuefullrow">
                                    <div id="tipoComunicacion"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="height: 50px;">
                        <div class="col-md-12">
                            <div class="dx-field">
                                <div class="dx-field-label labelfullrow" style="padding-left: 10px; font-weight: bold">Descripci&oacute;n</div>
                                <div class="dx-field-value valuefullrow">
                                    <div id="descripcion"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h3 class="ui-accordion-header ui-state-default ui-accordion-icons ui-accordion-header-active ui-state-active" style="padding: 5px; font-size: 18px;">Documentos</h3>
                <div style="padding: 15px">
                    @if (ViewBag.SoloLectura == "N")
                    {
                        <div class="row" style="height: 35px">
                            <div class="col-md-9">
                                <div class="dx-field">
                                    <div class="dx-field-label labelfullrow" style="font-weight: bold">Descripci&oacute;n</div>
                                    <div class="dx-field-value valuefullrow">
                                        <div id="descripcionArchivo"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div id="fileDocumento"></div>
                                <div id="agregarArchivo"></div>
                            </div>
                        </div>
                        <br />
                    }

                    <div class="row" style="padding-left:30px; padding-right:30px">
                        <div id="grdArchivos"></div>
                    </div>
                </div>
                @if (ViewBag.SoloLectura == "N")
                {
                    <div style="height: 10%; buttom: 0; text-align: center;">
                        <div id="almacenar"></div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>