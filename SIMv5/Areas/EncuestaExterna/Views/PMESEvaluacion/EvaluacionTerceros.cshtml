@using SIM.Properties
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    html, body {
        height: 100%;
    }

    .dx-datagrid-content .dx-datagrid-table .dx-row > td {
        vertical-align: middle;
    }

    .dx-popup-content {
        padding: 0px;
    }
</style>

<script>
    $(document).ready(function () {
        AjustarTamano();
    });

    $(window).resize(function () {
        AjustarTamano();
    });

    function AjustarTamano()
    {
        $("#pnlContenedor").height((window.innerHeight || document.body.clientHeight) - 190);
        $("#pnlGridPlanes").height($("#pnlContenedor").outerHeight() - $("#tabOpciones").outerHeight() - 4);
        $("#pnlGridPlanesAvanzar").height($("#pnlContenedor").outerHeight() - $("#tabOpciones").outerHeight() - 4);
        $("#pnlGridPlanesHistorico").height($("#pnlContenedor").outerHeight() - $("#tabOpciones").outerHeight() - 4);
    }
</script>

<script type="text/javascript" src="@Url.Content("~/Areas/EncuestaExterna/Scripts/PMESEvaluacion/evaluacionterceros.js?v=1.05")"></script>
<div id="pantallaDetalleTramites" title="Detalle Tramite" style="display: none; overflow: hidden;">
    <iframe src="" id="DetalleTramites" width="100%" height="100%"></iframe>
</div>

<div id="popAvanzaTareaTramite" style="padding: 0px">
    <iframe src="" id="frmAvanzaTareaTramite" style="width:100%; height:100%" frameborder="0" scrolling="no"></iframe>
</div>

<div id="popDetalleTramite" style="padding: 0px !important">
    <iframe src="" id="frmDetalleTramite" style="width:100%; height:100%" frameborder="0" scrolling="no"></iframe>
</div>

<div style="padding: 0px;">
    <div data-url="@Url.Content("~")" data-ve="@ViewBag.Version" data-t="@ViewBag.Tipo" data-c="@ViewBag.Copia" id="app" resizable>
        <div class="panelSIM-default">
            <div id="loadPanel"></div>
            <div style="text-align: center; font-weight: bold; font-size: 20px">@ViewBag.Titulo</div>
            <div class="panelSIM panelSIM-default" id="pnlContenedor">
                <div id="tabOpciones" class="panelSIM-heading" style="padding-bottom: 0px"></div>
                <div id="tab01" style="display: block">
                    <div id="pnlGridPlanes">
                        <div style="height: 100%">
                            <div id="grdPMESEmpresas"></div>
                        </div>
                    </div>
                </div>
                <div id="tab02" style="display: none">
                    <div id="pnlGridPlanesAvanzar">
                        <div style="height: 100%">
                            <div id="grdPMESPlanesAvanzar"></div>
                        </div>
                    </div>
                </div>
                <div id="tab03" style="display: none">
                    <div id="pnlGridPlanesHistorico">
                        <div style="height: 100%">
                            <div id="grdPMESPlanesHistorico"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>